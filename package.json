{
	"name": "@palebludot/e11ty",
	"version": "1.0.2",
	"description": "Using 11ty to generate HTML emails",
	"main": ".evelenty.js",
	"author": "Pavel Sanchez <pavel@bluedot.dev>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "npm-run-all clean --parallel dev tailwind:watch",
		"dev": "npx @11ty/eleventy --serve",
		"clean": "rm -rf dist",
		"tailwind": "npx tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.css",
		"tailwind:watch": "npx tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.css -w",
		"pa11y": "pa11y ./dist/",
		"spellcheck": "npm cspell \"src/**\"",
		"lint": "npm-run-all pa11y spellcheck",
		"format": "npx prettier --write dist/**",
		"commit": "git cz",
		"build": "cross-env ELEVENTY_ENV=prod npx @11ty/eleventy && npm run tailwind && npm run format"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": "commitizen.config.js"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx lint-staged",
			"pre-commit-msg": "exec < /dev/tty && node_modules/.bin/cz --hook || true"
		}
	},
	"lint-staged": {
		"*.{js,css,md}": "npm run format"
	},
	"keywords": [
		"eleventy",
		"HTML",
		"email"
	],
	"devDependencies": {
		"@11ty/eleventy": "^0.12.1",
		"autoprefixer": "^10.3.5",
		"commitizen": "^4.2.4",
		"commitlint": "^11.0.0",
		"cross-env": "^7.0.3",
		"cspell": "^5.10.1",
		"cz-customizable": "^6.3.0",
		"husky": "^7.0.1",
		"lint-staged": "^10.2.11",
		"npm-run-all": "^4.1.5",
		"pa11y": "^5.3.0",
		"postcss": "^8.3.7",
		"prettier": "^2.4.1",
		"semantic-release": "^17.4.7",
		"tailwindcss": "^2.2.15"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/palebludot/e11ty.git"
	},
	"bugs": {
		"url": "https://github.com/palebludot/e11ty/issues"
	},
	"homepage": "https://github.com/palebludot/e11ty#readme",
	"dependencies": {
		"inline-css": "^3.0.0"
	}
}
